{
  "production": {
    "csp": {
      "directives": {
        "defaultSrc": ["'self'"],
        "imgSrc": ["data:"],
        "fontSrc": ["data:"]
      }
    },
    "db": {
      "dialect": "postgres",
      "protocol": "postgres",
      "dialectOptions": {
        "ssl": {
          "require": true,
          "rejectUnauthorized": false
        }
      }
    },
    "observability": {
      "exposeMetrics": false,
      "exposeStatus": false
    }
  },
  "development": {
    "csp": {
      "directives": {
        "defaultSrc": ["'self'"],
        "imgSrc": ["data:"],
        "fontSrc": ["data:"]
      }
    }
  }
}
